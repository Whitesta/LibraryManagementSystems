@model LibraryManagementSystems.Models.Entity.Users
@{
    ViewBag.Title = "UpdateMember";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Update  Member</h2>
@using (Html.BeginForm("UpdateMember", "Members", FormMethod.Post))
            {
                <div style="margin-top:20px;"></div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Id)
                    @Html.TextBoxFor(u => u.Id, new { @class = "form-control" })<br />

                    <label>FirstName</label>
                    @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.FirstName, "", new { @style = "color:red" })<br /><br />
                    <label>LastName</label>
                    @Html.TextBoxFor(u => u.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.LastName, "", new { @style = "color:red" })<br /><br />
                    <label>Mail</label>
                    @Html.TextBoxFor(u => u.Mail, new { @class = "form-control" })<br />
                    
                    <label>UserName</label>
                    @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserName, "", new { @style = "color:red" })<br /><br />
                    <label>Password</label>
                    @Html.TextBoxFor(u => u.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color:red" })<br /><br />
                    <label>Telephone</label>
                    @Html.TextBoxFor(u => u.Telephone, new { @class = "form-control" }) <br />
                    <label>School</label>
                    @Html.TextBoxFor(u => u.School, new { @class = "form-control" }) <br />
                    <label>Foto Link</label>
                    @Html.TextBoxFor(u => u.Foto, new { @class = "form-control" }) <br />
                </div>
                <button class="btn btn-success"> Update </button>
            }

